@{
    ViewData["Title"] = "SweetAlert";
}

<h2>SweetAlert</h2>

<table>
    <tr>
        <td>
            <input type="button" value="Click Me" onclick="@Html.SweetAlert("A message from Client (on click)", "Your Title", SweetAlertIcon.Warning).Script" class="btn btn-primary" />
        </td>
        <td>
            @using (Html.BeginForm())
            {
                if (Context.Request.Method.ToLower() == "get")
                {
                    @Html.SweetAlert("A message from Client (on pageload)").Title("Your Title").Icon(SweetAlertIcon.Info)
                }
                <input type="submit" value="Submit Form" class="btn btn-primary" />
            }
        </td>
        <td>
            @using (Html.AjaxBeginForm(new AjaxOptions()))
            {
                <input type="submit" value="Submit Ajax" class="btn btn-primary" />
            }
        </td>
    </tr>
</table>