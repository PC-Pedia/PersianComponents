@{
    ViewData["Title"] = "Toastr";
}

<h2>Toastr</h2>

<table>
    <tr>
        <td>
            <input type="button" value="Click Me" onclick="@Html.Toastr("A message from Client (on click)", "Your Title", ToastrType.Warning).Script" class="btn btn-primary" />
        </td>
        <td>
            @using (Html.BeginForm())
            {
                if (Context.Request.Method.ToLower() == "get")
                {
                    @Html.Toastr("A message from Client (on pageload)").ProgressBar(true).Type(ToastrType.Info)
                }
                <input type="submit" value="Submit Form" class="btn btn-primary" />
            }
        </td>
        <td>
            @using (Html.AjaxBeginForm(new AjaxOptions()))
            {
                <input type="submit" value="Submit Ajax" class="btn btn-primary" />
            }
        </td>
    </tr>
</table>